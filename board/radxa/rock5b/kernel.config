
# Rockchip RK3588 SoC base config
CONFIG_ARCH_ROCKCHIP=y
CONFIG_ROCKCHIP_RK3588=y
CONFIG_ARM64=y
CONFIG_PCI=y
CONFIG_PCIE_ROCKCHIP_HOST=y
CONFIG_USB=y
CONFIG_USB_XHCI_HCD=y
CONFIG_USB_EHCI_HCD=y
CONFIG_MMC=y
CONFIG_MMC_DW=y
CONFIG_MMC_DW_ROCKCHIP=y
CONFIG_NETDEVICES=y
CONFIG_ETHERNET=y
CONFIG_R8169=y
CONFIG_WLAN=y

# Performance optimizations
CONFIG_CPU_FREQ_DEFAULT_GOV_PERFORMANCE=y
CONFIG_THERMAL_GOV_BANG_BANG=y
CONFIG_PREEMPT=y
CONFIG_HZ_1000=y
CONFIG_ARM64_CNP=y
CONFIG_ARM64_PTR_AUTH=y
CONFIG_ARM64_TAGGED_ADDR_ABI=y

# Armbian specific additions
CONFIG_ARMBIAN_ARM64_OPTIMIZATIONS=y
CONFIG_CRYPTO_DEV_ROCKCHIP=y
CONFIG_PHY_ROCKCHIP_INNO_USB2=y
CONFIG_PHY_ROCKCHIP_INNO_DSIDPHY=y
CONFIG_DRM_PANFROST=y
CONFIG_ARM_SCMI_PROTOCOL=y
CONFIG_ROCKCHIP_MPP_VCODEC=y
CONFIG_SND_SOC_ROCKCHIP=y
CONFIG_SND_SOC_ROCKCHIP_I2S=y
CONFIG_SND_SOC_ROCKCHIP_PDM=y
CONFIG_SND_SOC_ROCKCHIP_SPDIF=y

# RKNPU support
CONFIG_ROCKCHIP_RKNPU=y
CONFIG_ROCKCHIP_RKNPU_DEBUG_FS=y
CONFIG_ROCKCHIP_RKNPU_FW_PATH="/lib/firmware/rknpu/"

# Fan control support
CONFIG_HWMON=y
CONFIG_SENSORS_PWM_FAN=y
CONFIG_PWM=y
CONFIG_PWM_ROCKCHIP=y
CONFIG_THERMAL=y
CONFIG_ROCKCHIP_THERMAL=y
CONFIG_CPU_THERMAL=y
CONFIG_DEVFREQ_THERMAL=y

# GPIO and hardware control
CONFIG_KEYBOARD_GPIO=y
CONFIG_KEYBOARD_GPIO_POLLED=y
CONFIG_LED=y
CONFIG_LED_GPIO=y
CONFIG_CMD_LED=y

# GPU/Display support
CONFIG_DRM=y
CONFIG_DRM_ROCKCHIP=y
CONFIG_ROCKCHIP_ANALOGIX_DP=y
CONFIG_ROCKCHIP_CDN_DP=y
CONFIG_ROCKCHIP_DW_HDMI=y
CONFIG_ROCKCHIP_INNO_HDMI=y
CONFIG_DRM_PANEL_SIMPLE=y
CONFIG_DRM_PANEL_ORIENTATION_QUIRKS=y
CONFIG_DRM_DISPLAY_HELPER=y
CONFIG_DRM_DISPLAY_HDMI_HELPER=y
CONFIG_DRM_ROCKCHIP_DW_HDMI_QP=y
CONFIG_DRM_ROCKCHIP_RGB=y
CONFIG_DRM_ROCKCHIP_LVDS=y
CONFIG_DRM_ROCKCHIP_DSI=y
CONFIG_DRM_ROCKCHIP_ANALOGIX_DP=y
CONFIG_DRM_ROCKCHIP_CDN_DP=y